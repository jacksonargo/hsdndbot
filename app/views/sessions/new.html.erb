<div class="container">
<%= form_tag sessions_path, class: "form-signin" do %>
  <h2 class="form-signin-heading">Please sign in</h2>
  <%= label_tag :name, nil, class: "sr-only" %>
  <%= text_field_tag :name, params[:name], autofocus: true, class: "form-control", placeholder: "Name" %>
  <%= label_tag :password, nil, class: "sr-only" %>
  <%= password_field_tag :password, nil, autocomplete: "off", class: "form-control", placeholder: "Password" %>
  <%= submit_tag "Log in", class: "btn btn-lg btn-primary btn-block" %>
<% end %>
</div> <!-- /container -->
