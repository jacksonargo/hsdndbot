<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= @title %> <span class="caret"></span></a>
  <ul class="dropdown-menu">
    <li><%= link_to "All #{@title}", controller: @controller_name %></li>
    <li role="separator" class="divider"></li>
    <% @model.each do |l| %>
    <li><%= link_to l.name, l %></li>
    <% end %>
    <li role="separator" class="divider"></li>
    <li><%= link_to "New #{@title.singularize}", controller: @controller_name, action: :new %></li>
  </ul>
</li>

