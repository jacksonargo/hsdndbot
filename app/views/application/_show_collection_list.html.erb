<div class="listing">
  <h3><%= @opts[:title] %></h3>
  <table class="table table-hover">
  <% @model.send(@method).each do |a| %>
    <%# Always skip nils %>
    <% next unless a.send(@opts[:value]) %>
    <%# Only show zero when asked %>
    <% next if a.send(@opts[:value]) == 0 and not @opts[:show_zero] %>
    <%# Only show hidden when asked %>
    <% next if a.is_hidden? and not @opts[:show_hidden] %>
    <tr>
      <td><strong><%= a.name %></strong></td>
      <td><%= sprintf "%+i", a.send(@opts[:value]) %></td>
    </tr>
  <% end %>
  </table>
</div>
